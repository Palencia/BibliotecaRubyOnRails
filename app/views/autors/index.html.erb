<p id="notice"><%= notice %></p>

<h1><font color=blue>Listado de Autores</font></h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nombre y apellidos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Autor.find_each do |autor| %>
      <tr>
        <td><%= autor.id.to_s + " "%></td>
        <td><%= autor.nombre + " " + autor.apellidos %></td>
        <td><%= link_to 'Mostrar', autor %></td>
        <td><%= link_to 'Atrás', edit_autor_path(autor) %></td>
        <td><%= link_to 'Eliminar', autor, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
    <%= simple_format("\n") %>
  </tbody>
</table>

<br>

<font size=4><%= link_to 'Lista de Libros', libros_path %></font>
