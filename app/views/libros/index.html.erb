<p id="notice"><%= notice %></p>

<h1><font color=blue>Listado de Libros</font></h1>

<table cellspacing="10">
  <thead>
    <tr>
      <th><font size=3>Titulo</font></th>
      <th><font size=3>Autor</font></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @libros.each do |libro| %>
      <tr>
        <td><%= libro.titulo + " "%></td>
        <% if libro.autor != nil%>
          <td><%= libro.autor.nombre + " " + libro.autor.apellidos %></td>
        <% else %>
          <td><%= "Autor Desconocido" %></td>
        <% end %>
        <td><%= link_to 'Mostrar', libro %></td>
        <td><%= link_to 'Editar', edit_libro_path(libro) %></td>
        <td><%= link_to 'Eliminar', libro, method: :delete, data: { confirm: '¿Estás seguro? No se podrá recuperar una vez eliminado.' } %></td>
      </tr>
    <% end %>
    <%= simple_format("\n") %>
  </tbody>
</table>


<br>

<font size=4><%= link_to 'Lista de Autores', autors_path %></font>
<%= simple_format("\n\n") %>
<h1><font color="01FB11" size=4>Añadir</font></h1>
<font size=2><%= link_to 'Añadir nuevo Libro', new_libro_path %></font>
<%= simple_format("\n") %>
<font size=2><%= link_to 'Añadir nuevo Autor', new_autor_path %></font>
